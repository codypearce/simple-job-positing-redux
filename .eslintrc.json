{
    "extends": ["plugin:react/recommended"],
    "parser": "babel-eslint",
    "plugins": ["react", "prettier"],
    "parserOptions": {
        "ecmaFeatures": {
            "impliedStrict": true,
            "jsx": true,
            "modules": true,
            "classes": true
        },
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true
    },
    "rules": {
        "prettier/prettier": ["error", { "tabWidth": 4 }]
    }
}
